html, body, h1
  margin 0
  padding 0

body
  background linear-gradient(to right, #D6DDE4, #D6DBE0)

.content
  width 1280px
  margin 0 auto
  z-index 1

  .above_header_img
    height 150px

  .header
    position relative
    height 680px

    &__text
      position absolute
      top 125px
      width 100%
      z-index 4
      text-align center

      h1
        font-family News Cycle
        font-size 140px
        color white
        text-transform uppercase

    &__backimage
      position absolute
      top 50px
      left 30px

      img
        height 420px
        width 420px

    &__content
      position absolute
      left 50%
      margin-left -380px
      width 760px
      height inherit
      background #2D3A4B
      box-shadow 0 0 50px rgba(122,122,122,0.75)
      z-index 2

      &__innerblock
        position absolute
        top 210px
        left 165px
        width 665px
        height 340px
        z-index 3
        color white
        box-shadow 0 0 100px rgba(0,0,0,0.35)
        background linear-gradient(to bottom,rgba(100,100,100,0.75),rgba(80,80,80,0.85))

        .preheader
          display inline-block
          margin 125px 125px 0px 125px
          padding-bottom 35px
          border-bottom 1px solid white
          font 21px News Cycle
          text-transform uppercase

        .text_block
          display inline-block
          margin 35px 125px 0px 125px
          width 360px

          p
            margin 0

  .t_block
    position relative
    height 830px

    &__backimage
      position absolute
      top 350px
      left 30px

      img
        height 400px
        width 400px

    &__backblock
      position absolute
      left 50%
      margin-left -380px
      width 760px
      height inherit
      background #2D3A4B
      box-shadow 0 0 50px rgba(122,122,122,0.75)
      z-index 2

      &__innerblock
        position absolute
        top 170px
        left -70px
        width 960px
        height 500px
        z-index 3
        background rgba(205, 209, 94,0.95)

    &__content
      position absolute
      top 170px
      left 125px
      width 475px
      height 400px
      z-index 4
      background white

    &__faceimage
      position absolute
      top 140px
      left 600px
      z-index 5


  .bottom
    height 80px

@import "fonts.styl"
@import "libs.styl"