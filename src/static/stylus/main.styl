//COLORS
YELLOW_BG = rgba(197, 203, 70,.95)
RED_BG = rgba(229,79, 65,.95)
OLIVE_BG = 	rgba(171,126,94,.95)
LIGHT_ORANGE_TXT = rgb(214, 165, 147)
CYAN_BLUE_TXT = rgb(105, 125, 136)

//FONTS
MAIN_FONT = Bebas Neue

//SHADOWS
LIGHT_SHADOW = 0 0 100px rgba(0,0,0,.2)
HARD_SHADOW = 5px 20px 75px rgba(0,0,0,.45)

html, body, h1
  margin 0
  padding 0

body
  background linear-gradient(to right, #E3E7EC, #D3DBE4)

.blue_block
  position absolute
  top 150px
  left 50%
  width 760px
  margin-left -(@width/2)
  height 3590px
  z-index 2
  background #2D3A4B
  box-shadow 0 0 50px rgba(122,122,122,0.75)

.content
  width 1280px
  margin 0 auto
  z-index 1

  .above_header_img
    position relative
    height 150px

    &__imgwrap
      position absolute
      height 150px

      &_left
        left 300px

      &_right
        right 300px

  .header
    position relative
    height 680px

    &__text
      position absolute
      top 85px
      width 100%
      z-index 4
      text-align center

      h1
        font-family MAIN_FONT
        font-size 140pt
        letter-spacing 70px
        margin-right -(@letter-spacing)
        color white
        text-transform uppercase
        text-shadow rgba(0,0,0,.75) 0 0 .5em

    &__backimage
      position absolute
      top 50px
      left 80px

      img
        height 420px
        width 420px

    &__content
      position absolute
      left 50%
      margin-left -380px
      width 760px
      height inherit

      &__innerblock
        position absolute
        top 210px
        left 165px
        width 665px
        height 340px
        z-index 3
        color white
        box-shadow LIGHT_SHADOW
        background linear-gradient(to bottom,rgba(89, 105, 118,.8),rgba(75,88,99,.9))

        .preheader__wrap
          display inline-block
          padding 105px 0 26px 0
          margin 0 0 0 125px
          border-bottom 1px solid rgba(255,255,255,0.4)

          .preheader__text
            font-family MAIN_FONT
            font-size 24px
            font-weight bold
            word-spacing 4px

        .text_block
          display inline-block
          margin 26px 125px 0 125px
          width 360px

          p
            margin 0
            font-size 15px
            font-weight 100
            letter-spacing .015em
            line-height 2
            text-shadow rgba(0,0,0,.25) 0 0 .5em

  .t_block
    position relative
    height 880px

    &__backimage
      position absolute

      &_leftside
        top 350px
        left 30px

      &_rightside
        top 420px
        left 820px

      img
        height 400px
        width 400px

    &__innerblock
      position absolute
      width 960px
      height 500px
      z-index 3
      box-shadow LIGHT_SHADOW

      &_yellow
        top 170px
        left 190px
        background YELLOW_BG

      &_red
        top 170px
        left 125px
        background RED_BG

      &_olive
        top 170px
        left 190px
        background OLIVE_BG

    &__content
      position absolute
      height 400px
      padding-top 20px
      z-index 4
      background white
      box-shadow HARD_SHADOW
      text-align center

      &_width475
        top 170px
        left 125px
        width 475px

      &_width450
        top 335px
        left 190px
        width 450px
        z-index 6

      &__hr-line
        margin 0 auto

        &_olive
          border 0
          border-bottom 1px solid LIGHT_ORANGE_TXT

        &_cyan-blue
          color CYAN_BLUE_TXT

        &_340px
          margin 10px auto
          width 340px

        &_290px
          width 290px
          margin 5px auto

        &_240px
          width 240px

      h2
        margin-top 50px
        margin-bottom 30px
        font-size 16pt
        color LIGHT_ORANGE_TXT
        text-transform uppercase

      h3
        margin-top 6px
        margin-bottom 4px
        font-size 34pt
        font-family "Bebas Neue"
        color CYAN_BLUE_TXT
        text-transform uppercase
        letter-spacing 12px
        margin-right -(@letter-spacing)

      p
        color CYAN_BLUE_TXT
        padding 10px 110px 20px
        font-size 15px
        line-height 2

    &__faceimage
      position absolute
      z-index 5
      box-shadow HARD_SHADOW

      &_smallpic
        top 140px
        left 600px

      &_widepic
        top 240px
        left 360px

    &__hr
      position absolute
      left 50%
      bottom 0
      z-index 5
      width 120px
      margin-left -(@width/2)
      height 3px
      background-color #3A4656

  .bottom
    position relative
    height 400px

    &__block
      position absolute
      top 155px
      left 405px
      width 685px
      height 180px
      z-index 3
      color white
      box-shadow 0 0 100px rgba(0,0,0,0.35)
      background linear-gradient(to bottom,rgba(100,100,100,0.75),rgba(80,80,80,0.85))

@import "fonts.styl"
@import "libs.styl"